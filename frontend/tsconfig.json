{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2018",
        "strict": true,
        "outDir": "./dist",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "jsx": "react",
        "alwaysStrict": true,
        "experimentalDecorators": true,
        "useDefineForClassFields": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*",
        "assets.d.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ]
}
